<Window x:Class="vizualis_beadando.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vizualis_beadando"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Főoldal" HorizontalAlignment="Left" Margin="339,0,0,0" VerticalAlignment="Center" Height="46" Width="91" AutomationProperties.Name="Fooldal" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.433"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="Felhasznaloi fiokok" HorizontalAlignment="Left" Margin="89,26,0,0" VerticalAlignment="Top" Height="120" Width="150" AutomationProperties.Name="bt_Registr" Panel.ZIndex="-43" Click="OpenFelhasznalo" Background="#FFABABAB"/>
        <Button Content="Heti_Ajanlat" HorizontalAlignment="Left" Margin="69,252,0,0" VerticalAlignment="Top" Height="120" Width="150" AutomationProperties.Name="bt_Heti" Click="OpenHetiWindow" Background="#FFC3C3C3"/>
        <Button Content="Foetelek" HorizontalAlignment="Left" Margin="486,37,0,0" VerticalAlignment="Top" Height="120" Width="150" AutomationProperties.Name="bt_Foetelek" Click="OpenFoetelek" Background="#FFEDEDED"/>
        <Button Content="OrszagTortai" HorizontalAlignment="Left" Margin="569,217,0,0" VerticalAlignment="Top" Width="150" Height="120" AutomationProperties.Name="bt_Orszag" Background="#FF676767" Click="OpenOrszagTortai"/>
        <Button Content="Sutemenyek" HorizontalAlignment="Left" Margin="354,272,0,0" VerticalAlignment="Top" Width="150" Height="120" AutomationProperties.Name="bt_Sutemenyek" Click="OpenSutemenyek" Background="#FFE2E2E2"/>

    </Grid>
</Window>
