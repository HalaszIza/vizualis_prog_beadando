<Window x:Class="vizualis_beadando.MainWindow"    
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vizualis_beadando"
        mc:Ignorable="d"     
        Title="Főolda" Height="650" Width="946">
    <DockPanel>
        <Grid Background="#FFFDE7EA">

            <Button HorizontalAlignment="Left" Margin="61,67,0,0" VerticalAlignment="Top" Width="247" Height="229" AutomationProperties.Name="bt_Orszag" Click="OpenOrszagTortai" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="Images\orszag_tortai.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                </Button.Background>
            </Button>

            <Button HorizontalAlignment="Left" Margin="96,0,0,43" VerticalAlignment="Bottom" Height="241" Width="309" AutomationProperties.Name="bt_Registr" Click="OpenFelhasznalo" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="Images\belepes.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                </Button.Background>
            </Button>

            <Button HorizontalAlignment="Left" Margin="474,353,0,0" VerticalAlignment="Top" Width="276" Height="235" AutomationProperties.Name="bt_Sutemenyek" Click="OpenSutemenyek" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="Images\sutemenyek.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                </Button.Background>
            </Button>

            <Button HorizontalAlignment="Left" Margin="352,20,0,0" VerticalAlignment="Top" Height="297" Width="245" AutomationProperties.Name="bt_Heti" Click="OpenHetiAjanlat" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="Images\heti_ajanlat.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>

                </Button.Background>
                <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
            </Button>

            <Button HorizontalAlignment="Right" Margin="0,43,48,0" VerticalAlignment="Top" Height="305" Width="266" AutomationProperties.Name="bt_Foetelek" Click="OpenFoetelek" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="Images\foetelek.png" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                </Button.Background>
            </Button>

        </Grid>
    </DockPanel>
</Window>
